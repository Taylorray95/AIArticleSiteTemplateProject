@page "/admin/soannoyed"
@inject ApplicationDbContext DbContext

@using AIArticleSiteTemplateProject.Data
@using AIArticleSiteTemplateProject.Objects
@rendermode InteractiveServer
@attribute [StreamRendering(true)]
@inject ApplicationDbContext DbContext
@using Microsoft.EntityFrameworkCore
<h3>Insert Category Data</h3>

<button class="btn btn-primary" @onclick="InsertSampleData">Insert Sample Data</button>

@code {
    private async Task InsertSampleData()
    {
        var newCategory = new Category
            {
                CategoryDesc = "Sample Category Description 222",
                CategoryHashTag = "#SampleCategory222"
                // SysDate is set to DateTime.Now by default
            };

        DbContext.Categories.Add(newCategory);
        await DbContext.SaveChangesAsync();
    }
}
